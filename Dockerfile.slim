FROM python:3.11-slim as base

# Install system dependencies only
RUN apt-get update && apt-get install -y \
    ffmpeg \
    git \
    curl \
    unzip \
    coreutils \
    && rm -rf /var/lib/apt/lists/*

# Install only essential pip packages in the image
RUN pip install --no-cache-dir --upgrade pip
RUN pip install --no-cache-dir \
    gradio \
    numpy==1.26.4 \
    librosa \
    psutil \
    boto3 \
    botocore \
    requests

# Set working directory
WORKDIR /app

# Copy application code and scripts
COPY app.py /app/app.py
COPY pod_shutdown.py /app/pod_shutdown.py
COPY download_models.sh /app/download_models.sh
COPY setup_network_volume.py /app/setup_network_volume.py
COPY stop_inactive_pod.py /app/stop_inactive_pod.py
COPY start.sh /app/start.sh
COPY install_heavy_packages.sh /app/install_heavy_packages.sh
RUN chmod +x /app/download_models.sh /app/start.sh /app/install_heavy_packages.sh

# Create local models directory (for fallback storage)
RUN mkdir -p /app/models

# Expose Gradio and HearsAid API ports
EXPOSE 7860 7861

# Use the startup script
CMD ["./start.sh"]
